# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=luxe_hair_studio
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Authentication & Security
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=10

# Email Service (SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=noreply@luxehairstudio.com
FROM_NAME=Luxe Hair Studio

# Business Information
BUSINESS_NAME=Luxe Hair Studio
BUSINESS_URL=https://luxehairstudio.com
BUSINESS_EMAIL=contact@luxehairstudio.com
BUSINESS_PHONE=+1-310-555-0199
BUSINESS_ADDRESS=9595 Wilshire Boulevard, Beverly Hills, CA 90210

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
CDN_URL=https://cdn.luxehairstudio.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Appointment Settings
BOOKING_ADVANCE_DAYS=90
CANCELLATION_HOURS=24
REMINDER_HOURS=24

# Feature Flags
ENABLE_ONLINE_BOOKING=true
ENABLE_GIFT_CARDS=true
ENABLE_REVIEWS=true
ENABLE_NOTIFICATIONS=true
