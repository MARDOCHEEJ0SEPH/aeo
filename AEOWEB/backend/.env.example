# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aeo_website
DB_USER=dbuser
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Authentication & Security
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=10

# API Keys & External Services
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Email Service (SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Business Name

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Schema/SEO Defaults
ORGANIZATION_NAME=Your Business Name
ORGANIZATION_URL=https://yourdomain.com
ORGANIZATION_LOGO=https://yourdomain.com/assets/images/logo.png
ORGANIZATION_EMAIL=contact@yourdomain.com
ORGANIZATION_PHONE=+1-XXX-XXX-XXXX

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
CDN_URL=https://cdn.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_CITATIONS_TRACKING=true
ENABLE_AUTO_SCHEMA=true
ENABLE_CACHING=true
