# ========================================
# Autonomous Robotics Website Configuration
# ========================================

# AI API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@database:5432/robotics_brain
POSTGRES_DB=robotics_brain
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production

# Redis Configuration
REDIS_URL=redis://redis:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# Node Environment
NODE_ENV=production

# System Configuration
AI_DECISION_MODE=autonomous
LEARNING_ENABLED=true
EVOLUTION_SPEED=aggressive

# AEO/LLMO Configuration
TARGET_PLATFORMS=chatgpt,claude,perplexity,gemini,bing
OPTIMIZATION_FREQUENCY=hourly
SCHEMA_AUTO_UPDATE=true

# Content Generation
GENERATION_RATE=10_per_day
OPTIMIZATION_LEVEL=maximum

# Evolution Engine
EVOLUTION_MODE=autonomous
TEST_GENERATION=automatic
DEPLOYMENT_STRATEGY=blue_green
AB_TEST_CONCURRENT=10

# Analytics
TRACKING_MODE=comprehensive
AI_METRICS_ENABLED=true
REAL_TIME_ANALYSIS=true

# Business Operations
AUTONOMOUS_PRICING=true
LEAD_AUTO_QUALIFICATION=true
AUTO_RESPONSE_ENABLED=true

# Monitoring & Self-Healing
SELF_HEALING_ENABLED=true
AUTO_SCALING_ENABLED=true
ALERT_THRESHOLD=critical_only

# API Gateway
RATE_LIMITING=adaptive
CACHE_STRATEGY=intelligent

# Logging
LOG_LEVEL=info

# Ports (Internal - Do not change unless necessary)
NEURAL_CORE_PORT=3000
ANALYTICS_PORT=3001
CONTENT_GEN_PORT=3002
BUSINESS_OPS_PORT=3003
AEO_OPTIMIZER_PORT=3004
EVOLUTION_PORT=3005

# Frontend
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ANALYTICS_ENABLED=true
